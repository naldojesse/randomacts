<%- include('partials/header') -%>
<div class="container">

    <div class="row mt-5">
        <div>
            <p><strong>User Name</strong>: <%= user.userName %></p>
            <p><strong>Email</strong>: <%= user.email %></p>
            <a href="/logout" class="col-3 btn btn-primary">Logout</a>
        </div>



      <!--      generate RAK button-->
      <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/generateRAK">Generate RAK</a>
      </div>



      <p>Pending</p>
  <% for (let i = 0; i <= acts.length - 1; i++ ) { %>
      <% if (acts[i].completed === false) { %>
              <%- acts[i].act_info.title %>
              <a href="/act/<%- acts[i]._id %>/complete">Complete</a>
          <% } %>
      <% } %>

      <p>Completed</p>
  <% for (let i = 0; i <= acts.length - 1; i++ ) { %>
      <% if (acts[i].completed === true) { %>
              <%- acts[i].act_info.title%>
          <% } %>
      <% } %>


      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>